{
  "redirects": [
    { "source": "/buy.html", "destination": "/buy", "permanent": true },
    { "source": "/fees.html", "destination": "/fees", "permanent": true },
    { "source": "/perps.html", "destination": "/perps", "permanent": true }
  ],
  "rewrites": [
    /* Pump.fun API proxy (fees page) */
    {
      "source": "/api/pump/balance/tokens/:path*",
      "destination": "https://profile-api.pump.fun/balance/tokens/:path*"
    },

    /* Drift Next.js assets MUST be reachable at root /_next/... */
    {
      "source": "/_next/:path*",
      "destination": "https://ftx2-perps.vercel.app/_next/:path*"
    },

    /* Drift app under /_perps/... (for iframe same-domain) */
    {
      "source": "/_perps/:path*",
      "destination": "https://ftx2-perps.vercel.app/:path*"
    },

    /* Clean URLs for your static HTML pages */
    { "source": "/buy", "destination": "/buy.html" },
    { "source": "/fees", "destination": "/fees.html" },
    { "source": "/perps", "destination": "/perps.html" }
  ]
}

